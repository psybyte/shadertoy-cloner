{
  "name": "shadertoy-cloner",
  "version": "1.0.0",
  "description": "Local ShaderToy server for Lively Wallpaper - bypasses CloudFlare",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "install-service": "node install-service.js",
    "uninstall-service": "node uninstall-service.js",
    "build": "pkg server.js --targets node20-win-x64 --output dist/shadertoy-cloner.exe"
  },
  "pkg": {
    "targets": [
      "node20-win-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.0",
    "fs-extra": "^11.2.0",
    "node-windows": "^1.0.0-beta.8"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^5.16.1"
  }
}
